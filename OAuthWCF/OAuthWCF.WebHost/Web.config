        <endpoint address="mex" binding="mexHttpsBinding" contract="IMetadataExchange" />
        <endpoint address="/UserAdmin/Rest" binding="basicHttpsBinding" contract="OAuthWCF.Service.IUserAdmin" behaviorConfiguration="RestBehavior" name="UserAdminRest" />
        <endpoint address="mex" binding="mexHttpsBinding" contract="IMetadataExchange" />
        <endpoint address="/UserAdmin/Json" binding="basicHttpsBinding" contract="OAuthWCF.Service.IUserAdmin" behaviorConfiguration="JsonBehavior" name="UserAdminJson" />
        
        <endpoint address="mex" binding="mexHttpsBinding" contract="IMetadataExchange" />

      </service>
      <service name="OAuthWCF.Service.Service" behaviorConfiguration="serviceBehavior">
        <host>
         <baseAddresses>
           <add baseAddress="http://localhost:7767/" />
           <add baseAddress="http://localhost/OAuthWCF.WebHost" />
         </baseAddresses>
       </host>
        <endpoint address="/Service/Rest" binding="basicHttpsBinding" contract="OAuthWCF.Service.IService" name="ServiceSoap" />
        <endpoint address="mex" binding="mexHttpsBinding" contract="IMetadataExchange" />
        <endpoint address="/Service/Rest" binding="basicHttpsBinding" contract="OAuthWCF.Service.IService" behaviorConfiguration="RestBehavior" name="ServiceRest" />
      <endpoint address="mex" binding="mexHttpsBinding" contract="IMetadataExchange" />
        <endpoint address="/Service/Json" binding="basicHttpsBinding" contract="OAuthWCF.Service.IService" behaviorConfiguration="JsonBehavior" name="ServiceJson" />
    <endpoint address="mex" binding="mexHttpsBinding" contract="IMetadataExchange" />
      </service>
    </services>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" aspNetCompatibilityEnabled="true">
      <serviceActivations>
        <add service="OAuthWCF.Service.UserAdmin" relativeAddress="UserAdmin.svc" factory="OAuthWCF.WebHost.CustomHostFactory" />
        <add service="OAuthWCF.Service.Service" relativeAddress="Service.svc" factory="OAuthWCF.WebHost.CustomHostFactory" />
      </serviceActivations>
    </serviceHostingEnvironment>
    <behaviors>
      <endpointBehaviors>
        <behavior name="JsonBehavior">
          <webHttp faultExceptionEnabled="true" defaultBodyStyle="Bare" defaultOutgoingResponseFormat="Json" automaticFormatSelectionEnabled="false" />
          <endpointDiscovery enabled="true" />
        </behavior>
        <behavior name="RestBehavior">
          <webHttp defaultBodyStyle="Bare" defaultOutgoingResponseFormat="Xml" automaticFormatSelectionEnabled="false" faultExceptionEnabled="true" />
          <endpointDiscovery enabled="true" />
        </behavior>
      </endpointBehaviors>
      <serviceBehaviors>
        <behavior name="serviceBehavior">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
  <system.codedom>
